                    style="@style/VLine"
                    android:layout_height="0.5dp"
                    android:background="@color/shallow_gray" />

                <LinearLayout
                    android:id="@+id/layout_myhome_about"
                    style="@style/LyWHFourth"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_version"
                        android:layout_width="37dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/person_about" />

                    <TextView
                        style="@style/textview"
                        android:layout_marginLeft="10dp"
                        android:text="关于"
                        android:textSize="16sp" />

                    <LinearLayout
                        style="@style/LyWHFourth"
                        android:gravity="right" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/shop_arrow" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    style="@style/VLine"
                    android:layout_height="0.5dp"
                    android:background="@color/shallow_gray" />

                <LinearLayout
                    android:id="@+id/layout_myhome_set"
                    style="@style/LyWHFourth"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/my_set" />

                    <TextView
                        style="@style/textview"
                        android:layout_marginLeft="10dp"
                        android:text="设置"
                        android:textSize="16sp" />

                    <LinearLayout
                        style="@style/LyWHFourth"
                        android:gravity="right" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/shop_arrow" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/shallow_gray" />

            <TextView
                style="@style/VSpaceSmall"
                android:background="@color/bgall" />

            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/shallow_gray" />
            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_login_button"
                android:gravity="center"
                android:text="退出当前账号"
                android:textColor="#9bceff"
                android:textSize="17sp" />
        </LinearLayout>

