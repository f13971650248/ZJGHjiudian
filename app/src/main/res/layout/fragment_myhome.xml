                <LinearLayout
                    android:id="@+id/layout_shop_info"
                    style="@style/LyWHFourth"
                    android:background="@color/white"
                    android:visibility="visible"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_showlogo"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:src="@drawable/logn"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_border"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        style="@style/LyWHSecond"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical|left"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_shopname"
                            style="@style/textview"
                            android:layout_marginTop="10dp"
                            android:text="最牛的酒店"
                            android:textColor="@color/Black"
                            android:textSize="16sp" />

                        <LinearLayout
                            style="@style/LyWHSecond"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview"
                                android:text="湖北省武汉市光谷中心802"
                                android:textColor="@color/deep_grey"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_myaddress"
                                style="@style/textview"
                                android:singleLine="true"
                                android:textColor="@color/deep_grey"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    style="@style/VLine"
                    android:layout_height="0.5dp"
                    android:background="@color/shallow_gray" />

                <TextView
                    style="@style/VSpaceSmall"
                    android:background="@color/bgall" />

                <TextView
                    style="@style/VLine"
                    android:layout_height="0.5dp"
                    android:background="@color/shallow_gray" />

